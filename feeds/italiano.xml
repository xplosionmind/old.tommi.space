---
title: Cose di Tommi in italiano
description: Tutti i contenuti in italiano da <a href='https://tommi.space' target='_blank' title='Tommi Space'>tommi.space</a>
---
<?xml version='1.0' encoding='utf-8'?>
<rss version='2.0'><channel>
	<title>{{ page.title }}</title>
	<description>{{ page.description | xml_escape }}</description>
	<link>{{ site.url }}/tuffo</link>
	{% assign all = site.posts | concat: site.poetry | concat: site.notes | concat: site.filinge | concat: site.sconnesso | where: 'lang', 'it' | sort: 'date' | sort: 'updated' | reverse %}
	<lastBuildDate>{% for entry in all limit:1 %}{{ entry.date | 'date_to_rfc822' }}{% endfor %}</lastBuildDate>
	<image>
		<url>{{ site.image | prepend: 'https://tommi.space' }}</url>
		<title>{{ page.title }}</title>
		<link>{{ site.url }}/tuffo</link>
	</image>
	<language>it</language>
	<managingEditor>{{ site.email }} (Tommi)</managingEditor>
	<webMaster>{{ site.email }} (Tommi)</webMaster>
	<copyright>Creative Commons Attribution-ShareAlike 4.0 International</copyright>
	{% for entry in all %}
		{% unless page.path contains 'redirect.html %}
			<item>
				<title>{{ entry.title | xml_escape }}</title>
				<pubDate>{{ entry.date | 'date_to_rfc822' }}</pubDate>
				<description>{{ entry.content | replace: '"/', '"https://tommi.space/' | replace: "'/", "'https://tommi.space/" | xml_escape | strip_newlines }}</description>
</description>
				<link>{{ entry.url | prepend: 'https://tommi.space' }}</link>
				<guid isPermaLink='true'>{{ entry.url | prepend: 'https://tommi.space' }}</guid>
			</item>
		{% endunless %}
	{% endfor %}
</channel></rss>
